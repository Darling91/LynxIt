<mvc:View
	controllerName="zjblessons.Marketplace.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'Created',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growingThreshold='5'
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
							<SearchField
							id="searchField1"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearchable"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="MaterialID"/>
					</Column>
					<Column>
						<Text text="MaterialText"/>
					</Column>
					<Column>
						<Text text="MaterialDescription"/>
					</Column>
					<Column>
						<Text text="CreatedByFullName"/>
					</Column>
					<Column>
						<Text text="Created"/>
					</Column>
					<Column>
						<Text text="ModifiedByFullName"/>
					</Column>
					<Column>
						<Text text="Modified"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{MaterialID}"/>
							<ObjectIdentifier
								title="{MaterialText}"/>
							<ObjectIdentifier
								title="{MaterialDescription}"/>
							<ObjectIdentifier
								title="{CreatedByFullName}"/>
							<ObjectIdentifier
								title="{Created}"/>	
							<ObjectIdentifier
								title="{ModifiedByFullName}"/>	
							<ObjectIdentifier
							title="{path: 'Modified',
							formatter: '.formatter.formatTime'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{worklistView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>