<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Popover title="{MaterialText}" 
    modal="true"
    titleAlignment="Center"
    initialFocus="action"
    placement="Bottom"
    class="sapUiContentPadding">
        <footer>
            <Toolbar>
                <Button text="{i18n>btnClose}" press="onPressClosePopover"></Button>
                <Button text="Go to Material" press="onPressGoToMaterial"></Button>
            </Toolbar>
        </footer>
        <VBox justifyContent="Center" alignItems="Center">
            <FlexBox alignItems="Center" renderType="Bare" class="sapUiTinyMargin">
                <Text text="{i18n>lGroupText}:"
                    class="sapUiTinyMarginEnd"/>
                <Label text="{GroupText}"
                    design="Bold"/>
            </FlexBox>
            <FlexBox alignItems="Center" renderType="Bare" class="sapUiTinyMargin"> 
                <Text text="{i18n>lSubGroupText}:"
                    class="sapUiTinyMarginEnd"/>
                <Label text="{SubGroupText}"
                     design="Bold"/>
            </FlexBox>   
        </VBox>
    </Popover>
</core:FragmentDefinition>