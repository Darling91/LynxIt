<mvc:View
	controllerName="zjblessons.pepethefrog.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'MaterialText',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growingThreshold="15"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							liveChange="onSearch"
							width="auto"/>
						 <Button
						press="onPressOpenActionSheet"
						text="{i18n>btnAction}"
						type="Attention"/>
						<!-- <Button
						press="onPressCreateMaterial"
						icon="{i18n>iCreate}"
						text="{i18n>btnCreate}"
						type="Emphasized"/>
						<Button
						press="onPressRefresh"
						icon="{i18n>iRefresh}"
						tooltip="{btnRefresh}"/> -->
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="MaterialText"/>
					</Column>
					<Column>
						<Text text="MaterialDescription"/>
					</Column>
					<Column>
						<Text text="Created"/>
					</Column>
					<Column>
						<Text text="CreatedBy"/>
					</Column>
					<Column>
						<Text text="Modified"/>
					</Column>
					<Column>
						<Text text="ModifiedBy"/>
					</Column>
					<Column
					width = "5%">
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPressShowMaterial">
						<cells>
							<Link text="{MaterialText}" press="onPressMaterialDopInfo"/>
							<ObjectIdentifier
								title="{MaterialDescription}"/>
							<ObjectIdentifier
								title="{path: 'Created',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style:'short'
								}}"/>
							<ObjectIdentifier
								title="{CreatedByFullName}"/>	
							<ObjectIdentifier
								title="{path: 'Modified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style:'medium'
								}}"/>	
							<ObjectIdentifier
							title="{ModifiedByFullName}"/>
							<Button
								press="onPressDeleteMaterial"
								icon="{i18n>iDelete}"
								tooltip="{i18n>btnDelete}"
								type="Transparent"/>

						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>