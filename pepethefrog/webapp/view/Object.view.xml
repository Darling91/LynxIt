<mvc:View
	controllerName="zjblessons.pepethefrog.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core">


	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}"
		class="sapUiNoContentPadding">

		<semantic:titleHeading>
			<Title text="{MaterialText}"/>
		</semantic:titleHeading>

		<!-- <semantic:editAction>
			<semantic:EditAction
				press="onPressEditMaterial"/>
		</semantic:editAction> -->

		 <!-- <semantic:saveAsTileAction>
			<Button
				press="onPressSaveMaterial"
				icon="{i18n>iSave}"
				tooltip="{i18n>btnSave}"
				type="Emphasized"/>
		</semantic:saveAsTileAction>  -->

		<semantic:content>
			<IconTabBar 
				id="iconTabBar"
				headerMode="Inline"
				select="onSelectIconTabBar"
				validateFieldGroup="onValidateFieldGroup">
				<items>
					<IconTabFilter
						text="{i18n>ttlObjectList}"
						key="list"
						icon="{i18n>iObjectList}"
						enabled="{= !${objectView>/editMode} || ${objectView>/selectedKeyITB} === 'list'}"
						>
						<List headerText="{= ${objectView>/editMode} ? ${i18n>titleObjectNameEdit} + ' ' + ${MaterialText} : ${i18n>titleObjectNameView} + ' ' + ${MaterialText}}">
							<InputListItem 
								label="{i18n>Change}">
									<Switch 
										state="{= ${objectView>/editMode}}" change="onChange"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableNameColumnTitle}" 
								visible="{= !${objectView>/editMode}}"
								>
								<Text 
								text="{MaterialText}" 
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lMaterialDescription}" 
								visible="{= !${objectView>/editMode}}">
								<Text 
								text="{MaterialDescription}" 
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>Rating}" 
								visible="{= !${objectView>/editMode}}">
								<Text 
								text="{Rating}" 
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lGroupText}" 
								visible="{= !${objectView>/editMode}}">
								<Text 
									text="{GroupText}" 
									visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lSubGroupText}"
								visible="{= !${objectView>/editMode}}">
								<Text 
									text="{SubGroupText}" 
									visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lCreated}" 
								visible="{= !${objectView>/editMode}}">
								<Text text="{
									path: 'Created',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'long'
								}}" 
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableModifiedUTC}" 
								visible="{= !${objectView>/editMode}}">
								<Text text="{
									path: 'Modified',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'medium',
										UTC: 'true'
								}}"
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableModified}" 
								visible="{= !${objectView>/editMode}}">
								<Text text="{
									path: 'Modified',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'medium'
								}}"
								visible="{= !${objectView>/editMode}}"/>
							</InputListItem>





							<InputListItem 
								label="{i18n>lTableNameColumnTitle}"
								visible="{objectView>/editMode}"
								>
								<Input
								value="{path: 'MaterialText', type: 'sap.ui.model.odata.type.String'}"
									fieldGroupIds="listInput"
									maxLength="128" 
									enabled="{= !${objectView>/editMode} &amp;&amp; ${MaterialText} !== '' || undefined || null}"
									width="20em"
									required="true"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lMaterialDescription}" 
								visible="{objectView>/editMode}"
								>
								<Input 
									value="{MaterialDescription}"
									maxLength="256" 
									enabled="{= !${objectView>/editMode} &amp;&amp; ${MaterialDescription} !== '' || undefined || null}"
									width="20em"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>Rating}" 
								visible="{objectView>/editMode}">
								<Input
									value="{
                    					path: 'Rating', 
                    					type: 'sap.ui.model.odata.type.Decimal', 
                    					constraints: {precision: '3', scale: '2'}
                					}" 
									fieldGroupIds="listInput"
									enabled="{= !${objectView>/editMode} &amp;&amp; ${Rating} !== '' || undefined || null}"
									width="20em"
									required="true"/>
						
							</InputListItem>
							<InputListItem 
								label="{i18n>lGroupText}" 
								visible="{objectView>/editMode}">
								<ComboBox
									id="groupSelect"
									forceSelection="false"
									selectedKey="{GroupID}"
									width="15em"
									fieldGroupIds="listComboBox"
									required="true"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lSubGroupText}" 
								visible="{objectView>/editMode}">
								<ComboBox
									id="subGroupSelect"
									forceSelection="false"
									selectedKey="{SubGroupID}"
									width="15em"
									fieldGroupIds="listComboBox"
									required="true"/>
							</InputListItem>
							<InputListItem label="{i18n>lCreated}" visible="{objectView>/editMode}">
								<Text text="{path: 'Created',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'long'
								}}" 
								visible="{objectView>/editMode}"/>
							</InputListItem>
							<InputListItem label="{i18n>lTableModifiedUTC}" visible="{objectView>/editMode}">
								<Text text="{path: 'Modified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'medium',
									UTC: 'true'
								}}" 
								visible="{objectView>/editMode}"/>
							</InputListItem>
							<InputListItem label="{i18n>lTableModified}" visible="{objectView>/editMode}">
								<Text text="{path: 'Modified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'medium'
								}}" 
								visible="{objectView>/editMode}"/>
							</InputListItem>
						</List>
					</IconTabFilter>
					<IconTabFilter
						id="formIconTabFilter"
						text="{i18n>ttlObjectForm}"
						key="form"
						icon="{i18n>iObjectForm}"
						enabled="{= !${objectView>/editMode} || ${objectView>/selectedKeyITB} === 'form'}">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
			</items>
		</IconTabBar>
	</semantic:content>		

	<semantic:titleCustomTextActions>
		<Button
			visible="{objectView>/editMode}"
			icon="{i18n>iSave}"
			text="{i18n>btnSave}"
			press="onPressSaveMaterial"
		/>
		<Button
			visible="{objectView>/editMode}"
			icon="{i18n>iCancel}"
			text="{i18n>btnCancel}"
			press="onPressCancelMaterial"
		/>
		<Button
			visible="{!objectView>/editMode}"
			icon="{i18n>iEdit}"
			text="{i18n>btnEdit}"
			press="onPressEditMaterial"
		/>
	</semantic:titleCustomTextActions>

	</semantic:SemanticPage>

</mvc:View>