<mvc:View
	controllerName="zjblessons.pepethefrog.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:semantic="sap.ui.core">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}"
		class="sapUiNoContentPadding">

		<semantic:titleHeading>
			<Title text="{MaterialText}"/>
		</semantic:titleHeading>

		<semantic:editAction>
			<semantic:EditAction
				press="onPressEditMaterial"/>
		</semantic:editAction>

		<!-- <semantic:saveAsTileAction>
			<Button
				press="onPressSaveMaterial"
				icon="{i18n>iSave}"
				tooltip="{i18n>btnSave}"
				type="Emphasized"/>
		</semantic:saveAsTileAction> -->

		<semantic:content>
			<IconTabBar headerMode="Inline">
				<items>
					<IconTabFilter
						text="{i18n>ttlObjectList}"
						key="list"
						icon="{i18n>iObjectList}">
						<List headerText="{= ${objectView>/editMode} ? ${i18n>titleObjectNameEdit} + ' ' + ${MaterialText} : ${i18n>titleObjectNameView} + ' ' + ${MaterialText}}">
							<InputListItem 
								label="{i18n>labelEnableChanging}">
									<Switch 
										state="{= $(objectView>/editMode)}" change="onChange"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableNameColumnTitle}" 
								visible="{= !$(objectView>/editMode)}">
								<Text 
								text="{MaterialText}" 
								visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lMaterialDescription}" 
								visible="{= !$(objectView>/editMode)}">
								<Text 
								text="{MaterialDescription}" 
								visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lGroupText}" 
								visible="{= !$(objectView>/editMode)}">
								<Text 
									text="{GroupText}" 
									visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lSubGroupText}" 
								visible="{= !$(objectView>/editMode)}">
								<Text 
									text="{SubGroupText}" 
									visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lCreated}" 
								visible="{= !$(objectView>/editMode)}">
								<Text text="{
									path: 'Created',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'long'
								}}" 
								visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableModifiedUTC}" 
								visible="{= !$(objectView>/editMode)}">
								<Text text="{
									path: 'Modified'
									type: 'sap.ui.model.type.DateTime'
									formatOptions:{
										style: 'medium'
										UTC: 'true'
								}}" visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lTableModified}" 
								visible="{= !$(objectView>/editMode)}">
								<Text text="{
									path: 'Modified',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'medium'
								}}" 
								visible="{= !$(objectView>/editMode)}"/>
							</InputListItem>

							<InputListItem 
								label="{i18n>lTableNameColumnTitle}"
								visible="{(objectView>/editMode)}">
								<Input 
								value="{MaterialText}",
								maxLength="128",
								enabled = "{= ${objectView>/editMode} &amp;&amp; ${MaterialText} === '' || undefined || null}",
								width= "20em"
								/>
							</InputListItem>
							<InputListItem 
								label="{i18n>lMaterialDescription}" 
								visible="{(objectView>/editMode)}">
								<Input 
								value="{MaterialDescription}"
								maxLength="256"
								enabled = "{= ${objectView>/editMode} &amp;&amp; ${MaterialDescription} === '' || undefined || null}"
								width= "20em"
								/>
							</InputListItem>
							</InputListItem>
							<InputListItem 
								label="{i18n>lGroupText}" 
								visible="{(objectView>/editMode)}">
								<Select
									forceSelection="false"
									selectedKey="{GroupID}"
									width="15em"
									items="{
										path: '/zjblessons_base_Groups',
										sorter:{
											path: 'GroupText',
											descending: 'true',
										},
										filters: [{
											path: 'GroupText',
											operator: 'NE',
											value: null
										}]
									}" 
								>
									<core:Item
										key="{GroupID}"
										text="{GroupText}">
								</Select>
							</InputListItem>
							<InputListItem label="{i18n>lSubGroupText}" visible="{(objectView>/editMode)}">
								<Select
									forceSelection="false"
									selectedKey="{SubGroupID}"
									width="15em"
									items="{
										path: '/zjblessons_base_SubGroups'
										sorter:{
											path: 'SubGroupText',
											descending: 'true',
										},
										filters: [{
											path: 'SubGroupText',
											operator: 'NE',
											value: null
										}]
									}" 
								>
									<core:Item
										key="{SubGroupID}"
										text="{SubGroupText}">
								</Select>
							</InputListItem>
							<InputListItem label="{i18n>lCreated}" visible="{(objectView>/editMode)}">
								<Text text="{path: 'Created',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'long'
								}}" 
								visible="{(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem label="{i18n>lTableModifiedUTC}" visible="{(objectView>/editMode)}">
								<Text text="{path: 'Modified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'medium',
									UTC: 'true'
								}}" 
								visible="{(objectView>/editMode)}"/>
							</InputListItem>
							<InputListItem label="{i18n>lTableModified}" visible="{(objectView>/editMode)}">
								<Text text="{path: 'Modified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions:{
									style: 'medium'
								}}" 
								visible="{(objectView>/editMode)}"/>
							</InputListItem>
						</List>
					</IconTabFilter>
					<IconTabFilter
						text="{i18n>ttlObjectForm}"
						key="Form"
						icon="{i18n>iObjectForm}">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
			</items>
		</IconTabBar>
	</semantic:content>		

	<semantic:titleCustomTextActions>
		<Button
			visible="{objectView>/editMode}"
			icon="{i18n>iSave}"
			text="{i18n>btnSave}"
			press="onPressSaveMaterial"
		/>
		<Button
			visible="{objectView>/editMode}"
			icon="{i18n>iCancel}"
			text="{i18n>btnCancel}"
			press="onPressCancelMaterial"
		/>
		<Button
			visible="{objectView>/editMode}"
			icon="{i18n>iEdit}"
			text="{i18n>btnEdit}"
			press="onPressEditMaterial"
		/>
	</semantic:titleCustomTextActions>

	</semantic:SemanticPage>

</mvc:View>